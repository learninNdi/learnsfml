{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\mingw64_sfml\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-I\"C:/SFML3/include\"",
				"-DSFML_STATIC",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-L\"C:/SFML3/lib\"",
				"-lsfml-graphics-s",
				"-lsfml-window-s",
				"-lsfml-audio-s",
				"-lsfml-network-s",
				"-lsfml-system-s",
				"-lopengl32",
				"-lfreetype",
				"-lwinmm",
				"-lgdi32",
				"-lws2_32"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:\\mingw64_sfml\\bin\\g++.exe"
		}
	]
}